<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.LuoKyselyToimenpiteetVihainen"
             Title="Juttunurkka"
             BackgroundColor="#ffea7f">

    <StackLayout Spacing="40">
        <StackLayout Orientation="Horizontal"
                     VerticalOptions="Start"
                     HorizontalOptions="CenterAndExpand"
                     >

            <Label
              Text="{Binding MyStringProperty}"
              VerticalOptions="Start" 
              HorizontalOptions="CenterAndExpand"
              HorizontalTextAlignment="Center"
              FontAttributes="Bold"
              FontSize="15"
              TextColor="#4383EF" 
              Margin="0,40,0,0"/>
           
            <Image Source="Emoji3.jpg"
                   WidthRequest="60"
                   HeightRequest="60"
                   Margin="0,30,0,0"
            />
        </StackLayout>        
        
        <Label Text="Valitse aktiviteetit hymiÃ¶lle  
               Valitse 2"
            VerticalOptions="Start" 
            FontAttributes="Bold"
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            FontSize="25"
            TextColor="Black"   
            Margin="0,-20,0,0"
         />


        <Button Text="Vaihtoehdot"
            TextColor="black"
            FontAttributes="Bold"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" 
            BorderColor="#4383EF"
            BackgroundColor="White"
            FontSize="22"
            Margin="0,-95,0,0"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="340" 
                IsVisible="true"/>

        <!--"dropdown"-->
        <Frame
            HorizontalOptions="CenterAndExpand" 
            VerticalOptions="CenterAndExpand"
            x:Name="popupSelection"
            HasShadow="True"
            Margin="10,10,10,10" 
            WidthRequest="340"
            HeightRequest="300"
            Padding="1"
            BackgroundColor="White"
            BorderColor="#4383EF"
            CornerRadius="10"
            IsVisible="true">

            <CollectionView 
            HorizontalOptions="CenterAndExpand" 
            VerticalOptions="CenterAndExpand"
          
            HeightRequest="300" 
            ItemsSource="{Binding Items} "  >

                <CollectionView.ItemTemplate >
                    <DataTemplate >


                        <Grid Padding="1"
                   RowDefinitions="Auto, *"
                  ColumnDefinitions="Auto, *">
                            <CollectionView x:Name="Collection" 
                                            ItemsSource="{Binding ActivityChoises}"
                                            SelectionMode="Multiple"
                                            SelectedItems="{Binding Selected, Mode=TwoWay}"
                                            SelectionChanged="OnSelectionChanged"
                                            SelectionChangedCommandParameter="{Binding .}">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="1"
                                                  RowDefinitions="Auto, *"
                                                  HeightRequest="100"
                                                  WidthRequest="340"
                                                  ColumnDefinitions="Auto, *"  >

                                            <Label 
                                                    Text="{Binding Title}" 
                                                    TextColor="Black"
                                                    FontSize="20"
                                                    HeightRequest="50"
                                                    WidthRequest="340"
                                                    Margin="5,0,0,5"
                                                />


                                            <!-- erotteluviiva -->
                                            <BoxView HeightRequest="1"
                                                        BackgroundColor="DarkGray"
                                                        Grid.ColumnSpan="2"
                                                        Grid.Row="2"
                                                        VerticalOptions="End"/>


                                        </Grid>

                                    </DataTemplate>
                                </CollectionView.ItemTemplate>

                            </CollectionView>



                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>


        <Grid 
            RowDefinitions="Auto, Auto"
            ColumnDefinitions="Auto, Auto"
            VerticalOptions="EndAndExpand"
            HorizontalOptions="CenterAndExpand">

            <Button Grid.Column="2" 
                Text="Jatka"
                Clicked="JatkaButtonClicked" 
                VerticalOptions="EndAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="19"
                Margin="20,0,10,40"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="150"
                BackgroundColor="#feba4f"
                TextColor="Black"
                FontAttributes="Bold"
                BorderColor="Transparent"
            />
        </Grid>

    </StackLayout>

</ContentPage>