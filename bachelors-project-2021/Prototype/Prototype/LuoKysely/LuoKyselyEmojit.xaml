<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.LuoKyselyEmojit"
             BackgroundColor="#ffea7f"
             Title="Juttunurkka">
    

    <StackLayout Margin="20">

        <Label Grid.Column="2"
            Text="Valitse hymiÃ¶t"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            FontSize="30"
            TextColor="Black" 
            Margin="0,80,0,10"
        />

        <CollectionView ItemsSource="{Binding Emojit}"
                        ItemsLayout="VerticalGrid, 2"
                        Margin="15,25,0,0">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10"
                           BorderColor="#4383EF"
                           CornerRadius="5"
                           Margin="10,10,10,10">   
                        <Grid RowDefinitions="Auto"
                              ColumnDefinitions="Auto, *">

                            <!-- Image -->
                            <Image Grid.RowSpan="2"
                                   Source="{Binding Item.ImageSource}"     
                                   Aspect="AspectFill"
                                   Scale="1.5"
                                   HeightRequest="60"
                                   WidthRequest="60" /> 

                            <!-- Checkbox -->
                            <CheckBox x:Name="Checkbox"
                                      IsChecked="{Binding CheckBox}"
                                      CheckedChanged="OnCheckBoxCheckedChanged"
                                      Color="Black"
                                      Scale="1.5"
                                      Grid.Row="1"
                                      Grid.Column="1" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>


        </CollectionView>

        <Grid 
            RowDefinitions="Auto, Auto"
            ColumnDefinitions="Auto, Auto"
            VerticalOptions="End"
            Padding="10"
            HorizontalOptions="CenterAndExpand">

            <Button Grid.Column="0"
                Text="Edellinen"
                Clicked="EdellinenButtonClicked"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="CenterAndExpand" 
                BackgroundColor="#feba4f"
                TextColor="Black"
                BorderColor="Transparent"
                FontSize="19"
                Margin="20,0,10,40"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="150"
                FontAttributes="Bold"
            />

            <Button Grid.Column="1" 
                Text="Jatka"
                x:Name="JatkaBtn"
                Clicked="JatkaButtonClicked" 
                IsEnabled="false"
                VerticalOptions="EndAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                BackgroundColor="#feba4e"
                TextColor="Black"
                FontAttributes="Bold"
                BorderColor="Transparent"
                FontSize="19"
                Margin="20,0,10,40"
                CornerRadius="10"
                HeightRequest="50"
                WidthRequest="150"
                
            />

        </Grid>
    </StackLayout>
</ContentPage>
