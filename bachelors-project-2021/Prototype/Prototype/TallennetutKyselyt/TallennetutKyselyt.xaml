<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.TallennetutKyselyt"
             BackgroundColor="#ffea7f">

    
    <!-- custom back button solution -->
    <NavigationPage.TitleView >

       
        
        <StackLayout Orientation="Horizontal" VerticalOptions="Center">
            <ImageButton Source="backBtn.png"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Start"
                         Clicked="BackBtnClicked"
                         Margin="0"
                         HeightRequest="17"
                         WidthRequest="17"/>

            <Label Text="Tallennetut kyselyt"
                   Margin="20,0,0,0"
                   FontSize="20" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"  
                   VerticalOptions="Center"/>
        </StackLayout>

      
        
    </NavigationPage.TitleView>

    <StackLayout>
		<Button  Text="Oletuskysely"
                 Clicked="OletusClicked" 
                 Margin="20,20,20,20"
                 TextColor="Black"
                 FontAttributes="Bold"
                 CornerRadius="5"
                 HorizontalOptions="Center"
                 WidthRequest="300"
                 FontSize="20"
                 HeightRequest="50"
                 BackgroundColor="#feba4f"
                 BorderColor="Transparent"
                 IsEnabled="True"/>
		
        <CollectionView Margin="20"
                        ItemsSource="{Binding Surveys}"
                        SelectionMode="Single"
                        SelectionChanged="OnListSelection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="1"
                          RowDefinitions="Auto, *"
                          ColumnDefinitions="Auto, *"  >
                        
                        <Label 
                               Text="{Binding}"
                               FontSize="22"
                               HorizontalOptions="Start"/>


                        <!-- Separator -->
                        <BoxView HeightRequest="1"
                                BackgroundColor="DarkGray"
                                Grid.ColumnSpan="2"
                                Grid.Row="2"
                                VerticalOptions="End"/>

                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <Button  x:Name="TButton"
                 Text="Avaa"
                 TextColor="Black"
                 FontAttributes="Bold"
                 Clicked="AvaaClicked" 
                 Margin="0,0,0,20"
                 CornerRadius="10"
                 HorizontalOptions="Center"
                 WidthRequest="150"
                 HeightRequest="50"
                 FontSize="20"
                 BackgroundColor="#feba4f"
                 BorderColor="Transparent"
                 BorderWidth="0.1"
                 IsEnabled="False"/>


    </StackLayout>


</ContentPage>