<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.LisÃ¤tiedotClient"
             Title="Tulokset"
             BackgroundColor="#FFEA7F">

    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <!-- Title -->
            <Label Text="TULOKSET"
                   FontSize="40"
                   FontAttributes="Bold"
                   TextColor="Black"
                   FontFamily="BebasNeue"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>

            <Grid HorizontalOptions="Center" Margin="0,30,0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Smileys -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bars -->
                    <RowDefinition Height="Auto"/>
                    <!-- Numbers -->
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <CollectionView ItemsSource="{Binding Results}" Grid.Row="0" Grid.ColumnSpan="7">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout HorizontalOptions="Center">
                                <Image Source="{Binding Image}" HeightRequest="40" />

                                <Frame WidthRequest="50" 
                                       HeightRequest="{Binding Scale}" 
                                       BackgroundColor="Orange" 
                                       CornerRadius="5"
                                       BorderColor="#C381FD"
                                       Padding="0" HasShadow="False"
                                       VerticalOptions="End">
                                    <Label Text="{Binding Amount}" 
                                           TextColor="White" 
                                           FontSize="36"
                                           FontAttributes="Bold"
                                           FontFamily="RobotoMedium"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
