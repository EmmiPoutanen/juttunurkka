<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.LisätiedotHost"
             Title="Juttunurkka"
             BackgroundColor="#FFEA7F">

    <ContentPage.Content>
        <StackLayout>

            <Label
        Text="TULOKSET"
        FontSize="40"
        FontAttributes="Bold"
        FontFamily="BebasNeue"
        TextColor="Black"
        HorizontalOptions="Center"
        Margin="0,30,0,50"/>

            <CollectionView
        ItemsSource="{Binding Results}"
        HorizontalOptions="Center"
        Margin="0,0,0,20">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="0"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout
              WidthRequest="100"
              VerticalOptions="EndAndExpand"
              HorizontalOptions="Center"
              Spacing="0">

                            <Image
                Source="{Binding Image}"
                HeightRequest="80"
                HorizontalOptions="Center"/>

                            <Grid
                HeightRequest="200"
                VerticalOptions="FillAndExpand">
                                <Frame
                  VerticalOptions="End"
                  HeightRequest="{Binding ScalePx}"
                  WidthRequest="60"
                  BackgroundColor="#FEBA4F"
                  CornerRadius="5"
                  Padding="0"
                  HasShadow="False">
                                    <Label
                    Text="{Binding Amount}"
                    TextColor="Black"
                    FontSize="30"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                                </Frame>
                            </Grid>

                            <BoxView
                HeightRequest="8"
                BackgroundColor="#C381FD"
                VerticalOptions="End"
                Margin="0,0,0,25"
                HorizontalOptions="FillAndExpand"/>



                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <StackLayout
        Orientation="Horizontal"
        HorizontalOptions="Center"
        VerticalOptions="EndAndExpand"
        Spacing="20"
        Margin="0,0,0,30">

                <Button
          Text="Keskeytä"
          Clicked="KeskeytäClicked"
          BackgroundColor="#FEBA4F"
          TextColor="Black"
          FontSize="24"
          FontAttributes="Bold"
          CornerRadius="15"
          HeightRequest="80"
          WidthRequest="150"
          BorderColor="Transparent"
          BorderWidth="0"/>

                <Button
          Text="Jatka"
          Clicked="JatkaClicked"
          BackgroundColor="#FEBA4F"
          TextColor="Black"
          FontSize="24"
          FontAttributes="Bold"
          CornerRadius="15"
          HeightRequest="80"
          WidthRequest="150"
          BorderColor="Transparent"
          BorderWidth="0"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>