<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.AktiviteettiäänestysTulokset"
             Title="Juttunurkka">

    <ContentPage.Content>
        <StackLayout>

            <Label Text="Tulokset"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand"
                   FontSize="30"
                   TextColor="#4383EF"
                   FontAttributes="Bold"
                   Margin="0,40,0,0"/>

            <AbsoluteLayout Margin="15"  VerticalOptions ="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Label x:Name="result" Margin="5"  
                       Text="Tähän äänestyksen tulos"
                       FontSize="25" 
                       HeightRequest="200"
                       VerticalTextAlignment="Center" 
                       HorizontalTextAlignment="Center"
                   />


            </AbsoluteLayout>

            <AbsoluteLayout Margin="20"  VerticalOptions ="EndAndExpand" HorizontalOptions="CenterAndExpand">
                <Button Text="Sulje huone"
                     Clicked="SuljeClicked" 
                     CornerRadius="10"
                     HorizontalOptions="Center"
                     WidthRequest="255"
                     HeightRequest="50"/>
            </AbsoluteLayout>


        </StackLayout>
    </ContentPage.Content>

</ContentPage>
