<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.ActivityAnswered"
             BackgroundColor="#FFEA7F">
    <ContentPage.Content>
        <StackLayout Padding="20">

            <Label  Text="VASTAUS TALLENNETTU"
                FontAttributes="Bold"
                FontFamily="BebasNeue"
                TextColor="Black"
                FontSize="35"
                HorizontalOptions="Center"
                Margin="0,40,0,100"/>

            <!-- This is now set as button even tho it does not do anything, it is just easiest
                 to visualize -->
            <Button
                x:Name="Activity"
                Text="{Binding ActivityToShow.Title}"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="15"
                FontFamily="RobotoMedium"
                BackgroundColor="#FFA726"
                BorderColor="Transparent"
                CornerRadius="10"
                HeightRequest="250"
                WidthRequest="150"
                VerticalOptions="Center"
                ImageSource="{Binding ActivityToShow.ImageSource}"
                ContentLayout="Top, 20"
                LineBreakMode="WordWrap"/>

            <!-- Progress Bar -->
            <ProgressBar x:Name="progressBar"
                FlowDirection="LeftToRight"
                Progress="1"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300"
                ScaleY="15"
                ProgressColor="#FFA726"
                Margin="0,50,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>