<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.JuttunurkkaSuljettu"
             BackgroundColor="#ffea7f"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="0,40,0,20"
                 Spacing="40"
                 VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand">

        <!-- Logo -->
        <Image Source="logo_no_background.png"
               HeightRequest="300"
               HorizontalOptions="Center" />

        <!-- Center content -->
        <Grid HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            <!-- Green background base -->
            <Frame BackgroundColor="#89e077"
           CornerRadius="10"
           Padding="20"
           HasShadow="False"
           WidthRequest="300"
           HeightRequest="440"
           Margin="0,80,0,0"
           HorizontalOptions="Center"
           VerticalOptions="Center">

                <!-- Empty content; green serves only as base -->
            </Frame>

            <!-- Orange content box floating over the green -->
            <Frame BackgroundColor="#FFBA49"
           CornerRadius="12"
           WidthRequest="340"
           HeightRequest="180"
           Padding="10"
           Margin="0,0,0,0"
           HasShadow="False"
           HorizontalOptions="Center"
           VerticalOptions="Start">

                <StackLayout Spacing="10" HorizontalOptions="Center" WidthRequest="340">
                    <Label Text="JUTTUNURKKA ON"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="Black"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center" />

                    <Label Text="SULJETTU"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="40,0,0,0"
                   HorizontalTextAlignment="Start" />

                    <Image Source="lukko.png"
                   HeightRequest="100"
                   Margin="0,-60,40,0"
                   HorizontalOptions="End"/>
                </StackLayout>
            </Frame>
        </Grid>

        <!-- Button -->
        <Button Text="Palaa alkuun"
                BackgroundColor="#FFBA49"
                TextColor="Black"
                CornerRadius="10"
                FontSize="22"
                FontAttributes="Bold"
                HeightRequest="50"
                WidthRequest="255"
                HorizontalOptions="Center"
                BorderColor="Transparent"
                Clicked="AlkuunClicked"/>
    </StackLayout>
</ContentPage>