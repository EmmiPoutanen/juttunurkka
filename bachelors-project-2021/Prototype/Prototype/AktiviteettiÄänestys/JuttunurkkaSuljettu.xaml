<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.JuttunurkkaSuljettu"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#ffea7f">
    <AbsoluteLayout Padding="0"
                  HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand">
        <StackLayout AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                 AbsoluteLayout.LayoutFlags="All"
                 BackgroundColor="#ffea7f">
            <StackLayout Padding="10">
                <Image Source="logo_no_background"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               WidthRequest="50"
               HeightRequest="50"
               Margin="0,150,0,60"
               Aspect="AspectFit"
               Scale="6.5" />

                <Grid HorizontalOptions="CenterAndExpand"
              Margin="0,110,0,0"
              HeightRequest="420"
              WidthRequest="300"
              BackgroundColor="#89e077">
                    <Frame BackgroundColor="#feba4f"
                 CornerRadius="7"
                 HasShadow="False"
                 HorizontalOptions="FillAndExpand"
                 VerticalOptions="FillAndExpand"
                 Margin="-20,35,-20,170">
                        <Grid HorizontalOptions="Center"
                  VerticalOptions="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0"
                     Grid.Column="1"
                     Text="JUTTUNURKKA ON"
                     FontSize="29"
                     FontAttributes="Bold"
                     TextColor="Black"
                     HorizontalTextAlignment="Center"
                     VerticalTextAlignment="Center"
                     Margin="0,-10,0,5" />

                            <Label Grid.Row="1"
                     Grid.Column="1"
                     Text="SULJETTU"
                     FontSize="29"
                     FontAttributes="Bold"
                     TextColor="Black"
                     HorizontalTextAlignment="Center"
                     VerticalTextAlignment="Center"
                     Margin="-110,5,0,0" />

                            <Image Grid.Row="0"
                     Grid.RowSpan="2"
                     Grid.Column="1"
                     Source="lukko.png"
                     Aspect="AspectFit"
                     WidthRequest="60"
                     HeightRequest="60"
                     Margin="120,35,0,0" />
                        </Grid>
                    </Frame>
                </Grid>

                <Button Text="Palaa alkuun"
                TextColor="Black"
                FontAttributes="Bold"
                Clicked="AlkuunClicked"
                HorizontalOptions="Center"
                VerticalOptions="EndAndExpand"
                FontSize="29"
                BackgroundColor="#feba4f"
                BorderColor="#ffea7f"
                BorderWidth="0"
                CornerRadius="7"
                HeightRequest="70"
                WidthRequest="250"
                Margin="0,-55,0,10" />
            </StackLayout>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>