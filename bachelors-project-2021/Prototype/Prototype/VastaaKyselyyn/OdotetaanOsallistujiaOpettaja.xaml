<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.OdotetaanOsallistujiaOpettaja"
             Title="Juttunurkka"
             BackgroundColor="#ffea7f">
    
        <StackLayout Padding="30" Spacing="25" VerticalOptions="Center">

            <Label 
                Text="Odotetaan osallistujia" 
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                FontSize="30"
                TextColor="Black" 
                Margin="0,20,0,0"/>

        <StackLayout Spacing="40" HorizontalOptions="Center">
            
            <Label Text="{Binding ParticipantsCount, StringFormat='Osallistujia: {0}'}"
                   FontSize="25"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <Label Text="{Binding roomCode}"
                   FontSize="25"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />
        </StackLayout>

        <StackLayout Spacing="15" VerticalOptions="Center" HorizontalOptions="Center">

            <Button Text="Aloita kysely"
                    x:Name="AloitaBtn"
                    Clicked="AloitaButtonClicked"
                    FontAttributes="Bold"
                    BackgroundColor="#feba4e"
                    TextColor="Black"
                    FontSize="19"
                    CornerRadius="10"
                    BorderColor="Transparent"
                    HeightRequest="50"
                    WidthRequest="200"/>
            
            <Button Text="KeskeytÃ¤"
                    Clicked="KeskeytaButtonClicked" 
                    BackgroundColor="#feba4e"
                    FontAttributes="Bold"
                    BorderColor="Transparent"
                    TextColor="Black"
                    FontSize="19"
                    CornerRadius="10"
                    HeightRequest="50"
                    WidthRequest="200"/>



                
        </StackLayout>

    </StackLayout>

</ContentPage>