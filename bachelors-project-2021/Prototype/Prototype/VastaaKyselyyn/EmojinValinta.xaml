<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.EmojinValinta"
             Title="Juttunurkka"
             >

    <StackLayout >

        <Label 
            Text="{Binding introMessage}"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            FontSize="30"
            TextColor="#4383EF" 
            
        />


        <Frame Padding="10"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand"
            BorderColor="#4383EF"
            CornerRadius="10"
            HeightRequest="220"
            WidthRequest="310"
               >



            <CollectionView  ItemsSource="{Binding Emojit}"
                            ItemsLayout="VerticalGrid, 3">
              

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5"
                              RowDefinitions="Auto, *"
                             ColumnDefinitions="Auto, *">

                            <ImageButton Grid.Column="0"
                                       Source="{Binding Item.ImageSource}"
                                       ClassId="{Binding Item.ID}"
                                       BackgroundColor="Transparent"
                                       HeightRequest="60"
                                       WidthRequest="60"
                                       Margin="10,0,0,0"
                                       Clicked="Button_Clicked"/>
                                

                        </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
          


        </Frame>


        <ProgressBar x:Name="progressBar"
            FlowDirection="RightToLeft"
            Progress="1"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand"
            WidthRequest="300"
            ScaleY="14"
            ProgressColor="#4383EF"/>


        <Button Text="Tallenna"
            x:Name="Vastaus"    
            Clicked="Vastaa_Clicked"    
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" 
            IsEnabled="False"    
            FontSize="19"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="255"
            />


    </StackLayout>

</ContentPage>
