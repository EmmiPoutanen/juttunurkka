<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.EmojinValinta"
             BackgroundColor="#FFEA7F"
             >

    <StackLayout Padding="50" Spacing="50">

        <HorizontalStackLayout 
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="10">

            <!-- Question -->
            <Label 
                Text="{Binding introMessage}"
                VerticalOptions="Center" 
                HorizontalTextAlignment="Center"
                FontSize="35"
                TextColor="Black"
                FontFamily="BebasNeue"
            />

            <!-- Sound Button and its frame -->
            <Frame
                CornerRadius="5"
                HasShadow="True"
                Padding="0"
                BackgroundColor="#FEBA4F"
                HeightRequest="40"
                WidthRequest="60">

                <ImageButton
                    x:Name="QuestionToSpeech"
                    Clicked="QuestionToSpeech_Clicked"    
                    Source="megaphone.png"
                    ClassId="{Binding Item.ID}"
                    BackgroundColor="Transparent"
                    HeightRequest="35"
                    WidthRequest="35"
                    VerticalOptions="Center"
                />
            </Frame>
        </HorizontalStackLayout>

        <!-- Emoji selection frame -->
        <Frame  Padding="15"
                HorizontalOptions="Center"
                BorderColor="White"
                CornerRadius="15"
                WidthRequest="300">


            <CollectionView ItemsSource="{Binding Emojit}"
                            ItemsLayout="VerticalGrid, 3">
                <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="5"
                             RowDefinitions="Auto, *"
                             ColumnDefinitions="Auto, *">

                            <ImageButton Grid.Column="0"
                                       Source="{Binding Item.ImageSource}"
                                       ClassId="{Binding Item.ID}"
                                       BackgroundColor="Transparent"
                                       HeightRequest="60"
                                       WidthRequest="60"
                                       Margin="10,0,0,0"
                                       Clicked="Button_Clicked"/>
                            </Grid>
                        </DataTemplate>
                 </CollectionView.ItemTemplate>
             </CollectionView>
          
        </Frame>

        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar"
                    FlowDirection="LeftToRight"
                    Progress="1"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    WidthRequest="300"
                    ScaleY="15"
                    ProgressColor="#FEBA4F"/>

        <!-- Submit Button -->
        <Button Text="TALLENNA"
            x:Name="Vastaus"    
            Clicked="Vastaa_Clicked"    
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" 
            IsEnabled="False"    
            FontSize="30"
            TextColor="Black"
            FontFamily="RobotoMedium"
            FontAttributes="Bold"
            BorderColor="Transparent"
            CornerRadius="15"
            HeightRequest="95"
            WidthRequest="270"
            BackgroundColor="#FEBA4F"/>

    </StackLayout>

</ContentPage>
