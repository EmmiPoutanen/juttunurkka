<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.OdotetaanVastauksiaOpe"
             Title="Juttunurkka"
             BackgroundColor="#ffea7f">
            
    <ContentPage.Content>
        <StackLayout>
            <Label 
                Text="Juttunurkka 1/2"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                FontSize="30"
                TextColor="Black"
                Margin="0,20,0,0"/>

            <Grid Padding="50,0,70,20"
                  RowSpacing="20"
                  ColumnSpacing="20"
                  ColumnDefinitions="Auto, *"
                  RowDefinitions="Auto, Auto, Auto">

                <Label Text="Avainkoodi:"
                       FontSize="25"
                       TextColor="Black"
                       Grid.Row="0" Grid.Column="0" />

                <Label Text="{Binding RoomCode}"
                       FontSize="25"
                       TextColor="Black"
                       Grid.Row="0" Grid.Column="1"
                       HorizontalTextAlignment="End"/>

                <Label Text="Osallistujia:"
                       FontSize="25"
                       TextColor="Black"
                       Grid.Row="1" Grid.Column="0" />

                <Label Text="{Binding ParticipantsCount}"
                       FontSize="25"
                       TextColor="Black"
                       Grid.Row="1" Grid.Column="1" 
                       HorizontalTextAlignment="End"/>

                <Label Text="Vastanneita:"
                       FontSize="25"
                       TextColor="Black"
                       Grid.Row="2" Grid.Column="0" />

                <Label Text="{Binding RespondentsDisplay}"
                       FontSize="25"
                       TextColor="Black"
                       Grid.Row="2" Grid.Column="1" 
                       HorizontalTextAlignment="End"/>
             </Grid>


            <StackLayout
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Margin="0,50,0,0"
                Spacing="10">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                    <Label
                    Text="Aikaa jäljellä:"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    FontAttributes="Bold"
                    FontSize="25"
                    TextColor="Black"/>

                    <Label
                    x:Name="countdownLabel"
                    Text="60"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    FontSize="25"
                    FontAttributes="Bold"
                    TextColor="Black"
                    Margin="50,0,0,0"
                />
                </StackLayout>
                
                <ProgressBar x:Name="progressBar"
                             Progress="1"
                             VerticalOptions="CenterAndExpand"
                             HorizontalOptions="CenterAndExpand"
                             WidthRequest="300"
                             ScaleY="15"
                             ProgressColor="#feba4e"
                             Margin="0,25,0,0"/>
            </StackLayout>

            <Button Text="Lopeta ja siirry&#10; tuloksiin"
                    x:Name="SiirryTuloksiinBtn"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    FontAttributes="Bold"
                    BackgroundColor="#feba4e"
                    TextColor="Black"
                    FontSize="20"
                    CornerRadius="10"
                    BorderColor="Transparent"
                    HeightRequest="95"
                    WidthRequest="270"
                    Clicked="LopetaClicked"
                    Margin="0,60,0,30"
                    LineBreakMode="WordWrap"
                    />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
