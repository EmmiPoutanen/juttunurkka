<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.OdotetaanVastauksiaOpe"
             Title="Juttunurkka"
             BackgroundColor="#ffea7f">
            
    <ContentPage.Content>
        <StackLayout >

            <Label 
            Text="Juttunurkka 1/2"
            VerticalOptions="StartAndExpand" 
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            FontSize="30"
            TextColor="Black" 
            Margin="0,50,0,0"
        />



            <StackLayout Margin="30,10,0,0" Spacing="5">
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="Avainkoodi:"
                           FontSize="25"
                           TextColor="Black"/>

                    <Label Text="{Binding RoomCode}"
                           FontSize="25"
                           TextColor="Black"/>
                </StackLayout>

                <Label Text="{Binding ParticipantsCount, StringFormat='Osallistujia: {0}'}"
                       FontSize="25"
                       TextColor="Black"/>

                <Label Text="{Binding RespondentsDisplay, StringFormat='Vastanneita: {0}'}"
                       FontSize="25"
                       TextColor="Black"/>
            </StackLayout>

            <StackLayout
                VerticalOptions="Start"
                HorizontalOptions="Center"
                Margin="0,30,0,0"
                Spacing="10"
            >
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label
                    Text="Aikaa jäljellä:"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    FontAttributes="Bold"
                    FontSize="25"
                    TextColor="Black"/>

                    <Label
                    x:Name="countdownLabel"
                    Text="60"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    FontSize="25"
                    FontAttributes="Bold"
                    TextColor="Black"
                    Margin="5,0,0,0"
                />
                </StackLayout>

                <Frame
                BackgroundColor="White"
                BorderColor="Black"
                Padding="0"
                VerticalOptions="Start"
                HorizontalOptions="Center"
                WidthRequest="250"
                HeightRequest="40"
                HasShadow="False"
                Margin="0,0,0,0"
            >
                    <ProgressBar x:Name="progressBar"
                    FlowDirection="LeftToRight"
                    Progress="1"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
                    ScaleY="7"
                    ProgressColor="#C381FD"/>
                </Frame>
            </StackLayout>

            <Button Text="Siirry tuloksiin"
            x:Name="SiirryTuloksiinBtn"
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" 
            FontAttributes="Bold"
            BackgroundColor="#feba4e"
            TextColor="Black"
            FontSize="19"
            CornerRadius="10"
            BorderColor="Transparent"
            HeightRequest="50"
            WidthRequest="200"
            Clicked="LopetaClicked"
            Margin="0,20,0,0"
            />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
